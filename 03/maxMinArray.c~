#include <stdio.h>
#include <stdlib.h>

/*
 * finds the maximum and minimum values in an array.
 */
void max_min(int *a, int n, int *max, int*min){
    int i =0;
    for(i =0; i < n; i++){
        if(a[i] > *max){
            *max = a[i];
        }
        if(a[i] < *min){
            *min = a[i];
        }
    }
}

